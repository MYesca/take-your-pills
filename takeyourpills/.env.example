# Database Configuration
# PostgreSQL connection string for the external database server
# Format: postgresql://user:password@host:port/database
DATABASE_URL="postgresql://user:password@localhost:5432/takeyourpills"

# Application Configuration
# Base URL of the application (used for OAuth redirects)
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXTAUTH_URL="http://localhost:3000"

# Microsoft Entra External ID (Azure AD) Configuration
# Client ID of your Azure AD application
# Found in Azure Portal > App registrations > Your app > Overview
AZURE_CLIENT_ID="your-azure-client-id-here"

# Client secret for your Azure AD application
# Found in Azure Portal > App registrations > Your app > Certificates & secrets
# Generate a new client secret if needed
AZURE_CLIENT_SECRET="your-azure-client-secret-here"

# Tenant ID for your Azure AD tenant
# Found in Azure Portal > App registrations > Your app > Overview
# For Microsoft Entra External ID, this is typically your tenant ID
AZURE_TENANT_ID="your-azure-tenant-id-here"

# Redirect URI for OAuth callback
# Must match the redirect URI configured in Azure Portal
# Format: http://localhost:3000/api/auth/callback (for development)
AZURE_REDIRECT_URI="http://localhost:3000/api/auth/callback"

# Environment
# Set to "development" for local development, "production" for production
NODE_ENV="development"
